extends ../layout/index
block body
  .row
    .span4
      h2 Add new
      form.well(action= '/create', method= 'post', id= 'create')
        fieldset
          .controls
            label Title
            input.span3(type="text", name= 'post[title]')
            label Body
            textarea.span3(name = 'post[body]')
        .form-actions
          input.btn(type = 'submit', value = 'Save!')
    .span4
      h2 #{vars.author.fullname}
      - if (vars.posts && vars.posts.length)
          #posts
            each post in vars.posts
              include _post
      - else
        .alert.alert-error no posts
